/* Лабораторная работа N1
Вариант 16
Самарин М. К. ; ИМИТиф(ПИЭ)
Задача:Даны вещественные координаты вершин треугольника координаты  
(x1, y1), (x2, y2) и (x3, y3). Найти координаты середин его сторон.*/

#include <iostream>
using namespace std;

int main() {
    // Ввод координат вершин треугольника
    int x1, y1, x2, y2, x3, y3;
    
    cout << "Введите координаты первой вершины (x1, y1): ";
    cin >> x1 >> y1;
    
    cout << "Введите координаты второй вершины (x2, y2): ";
    cin >> x2 >> y2;
    
    cout << "Введите координаты третьей вершины (x3, y3): ";
    cin >> x3 >> y3;
    
    // Вычисление координат середин сторон
    int M1x = (x1 + x2) / 2;
    int M1y = (y1 + y2) / 2;
    
    int M2x = (x2 + x3) / 2;
    int M2y = (y2 + y3) / 2;
    
    int M3x = (x3 + x1) / 2;
    int M3y = (y3 + y1) / 2;
    
    // Вывод координат середин сторон
    cout << "Координаты середин сторон:" << endl;
    cout << "M1 (" << M1x << ", " << M1y << ")" << endl;
    cout << "M2 (" << M2x << ", " << M2y << ")" << endl;
    cout << "M3 (" << M3x << ", " << M3y << ")" << endl;
    
    return 0;
}